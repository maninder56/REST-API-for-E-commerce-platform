    "title":"Product",
    "description":"An product in inventory",
    "type":"object",
    "properties":{
      "product_name":{
        "description":"Name of the product",
        "type":"string"
      },
      "product_description":{
        "description":"information about the product",
        "type":"string"
      },
      "price":{
        "description":"price of the product",
